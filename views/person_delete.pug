extends layout

block content

    h1=title

    p Do you realy want to delete this person: <span class="weight-text"> #{person.name} </span> ?
    .wrapper
        hr
        ul(class='container-fluid')
                li.card-of-person(class='row')
                    .data-of-person(class='col-sm-10') 
                        .name-of-person #{person.name}
                        .data-group
                            .date-of-birth
                                span Date of birth:     
                                |  #{person.date_of_birth_formatted}
                            .age-of-the-person 
                                span Age: 
                                |  #{person.age}
                            .phone-number 
                                span Phone number: 
                                |  +#{person.phone_number}
                            .sity 
                                span Sity: 
                                |  #{person.sity}
                            .addres 
                                span Addres: 
                                |  #{person.addres} #{person.house_number}-#{person.apartment_number}   
        hr
    form(method='POST', action='')
        .form-group
            input#personid.form-control(type="hidden", name='personid', required='true', value=person._id)
        button.btn.btn-primary(type='submit') Delete